<Window x:Class="HabitTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitTracker"
        xmlns:models="clr-namespace:HabitTracker.Models"
        xmlns:viewModels="clr-namespace:HabitTracker.ViewModels"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Habit Tracker - Dashboard" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- DataTemplate dla BooleanHabit -->
        <DataTemplate x:Key="BooleanHabitTemplate" DataType="{x:Type models:BooleanHabit}">
            <Border x:Name="BooleanBorder" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="#F5F5F5"
                    Loaded="BooleanHabitBorder_Loaded" Tag="{Binding}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,10,0" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"
                                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="48"
                                   MaxWidth="600"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" 
                                   TextWrapping="Wrap" MaxHeight="60" Margin="0,0,0,5"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="600"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Margin="0,5,0,0" HorizontalAlignment="Left">
                            <Run Text="Streak: " FontWeight="SemiBold"/>
                            <Run Text="{Binding History.Count, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                    <Button x:Name="BooleanButton" Grid.Column="1" Content="✓ Zrobione" 
                            Width="120" Height="35" 
                            Click="BooleanHabitButton_Click"
                            Tag="{Binding}"
                            Background="#4CAF50" Foreground="White" 
                            FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                            VerticalAlignment="Top"
                            Loaded="BooleanHabitButton_Loaded"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- DataTemplate dla QuantitativeHabit -->
        <DataTemplate x:Key="QuantitativeHabitTemplate" DataType="{x:Type models:QuantitativeHabit}">
            <Border x:Name="QuantitativeBorder" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="#F5F5F5"
                    Loaded="QuantitativeHabitBorder_Loaded" Tag="{Binding}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,10,0" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"
                                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="48"
                                   MaxWidth="500"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" 
                                   TextWrapping="Wrap" MaxHeight="60" Margin="0,0,0,5"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="500"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Margin="0,5,0,0" HorizontalAlignment="Left">
                            <Run Text="Cel: " FontWeight="SemiBold"/>
                            <Run Text="{Binding TargetValue}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding Unit}"/>
                        </TextBlock>
                    </StackPanel>
                    <TextBox Grid.Column="1" x:Name="ValueTextBox" Width="80" Height="30" 
                             Tag="{Binding}" Margin="5,0,5,0"
                             VerticalAlignment="Center"
                             Loaded="ValueTextBox_Loaded"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Unit}" VerticalAlignment="Center" Margin="0,0,10,0" 
                                   FontWeight="SemiBold" MaxWidth="60" TextTrimming="CharacterEllipsis"/>
                        <Button x:Name="QuantitativeButton" Content="Zapisz" Width="80" Height="30"
                                Click="QuantitativeHabitButton_Click"
                                Tag="{Binding ElementName=ValueTextBox}"
                                Background="#2196F3" Foreground="White"
                                FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                Loaded="QuantitativeHabitButton_Loaded"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- HabitTemplateSelector -->
        <viewModels:HabitTemplateSelector x:Key="HabitTemplateSelector"
                                          BooleanHabitTemplate="{StaticResource BooleanHabitTemplate}"
                                          QuantitativeHabitTemplate="{StaticResource QuantitativeHabitTemplate}"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Habit Tracker" FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="CurrentUserTextBlock" Text="" FontSize="14" 
                           Foreground="Gray" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <Button x:Name="LogoutButton" Content="Wyloguj" Width="80" Height="30"
                        Click="LogoutButton_Click"
                        Background="#F44336" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- Panel kontrolny -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <DatePicker x:Name="DatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged"
                       Width="150" Margin="0,0,10,0" VerticalAlignment="Center"
                       DisplayDateEnd="{x:Static System:DateTime.Today}"/>
            <Button Content="Dodaj nawyk" Width="120" Height="35" 
                    Click="AddHabitButton_Click"
                    Background="#FF9800" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0"/>
            <Button Content="Statystyki" Width="120" Height="35"
                    Click="StatsButton_Click"
                    Background="#9C27B0" Foreground="White"
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>

        <!-- Lista nawyków -->
        <ListView Grid.Row="2" x:Name="HabitsListView" 
                  ItemsSource="{Binding DailyHabits}"
                  ItemTemplateSelector="{StaticResource HabitTemplateSelector}"
                  BorderThickness="0" Background="White">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,2"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- Status bar -->
        <TextBlock Grid.Row="3" x:Name="StatusTextBlock" 
                   Text="Gotowe" Margin="0,10,0,0" 
                   Foreground="Gray" FontSize="12"/>
    </Grid>
</Window>
