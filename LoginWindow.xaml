<Window x:Class="HabitTracker.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Habit Tracker - Logowanie" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Habit Tracker" FontSize="32" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <!-- Formularz logowania/rejestracji -->
        <StackPanel Grid.Row="1" x:Name="LoginPanel">
            <TextBlock Text="Nazwa użytkownika:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" FontSize="14" Padding="8" Margin="0,0,0,15"
                     KeyDown="UsernameTextBox_KeyDown"/>
            
            <TextBlock Text="Hasło:" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" FontSize="14" Padding="8" Margin="0,0,0,20"
                        KeyDown="PasswordBox_KeyDown"/>
            
            <Button x:Name="LoginButton" Content="Zaloguj się" 
                    Width="200" Height="40" FontSize="14" FontWeight="Bold"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                    Cursor="Hand" Click="LoginButton_Click" Margin="0,0,0,10"/>
            
            <TextBlock HorizontalAlignment="Center" Foreground="Gray" FontSize="12">
                <Run Text="Nie masz konta? "/>
                <Hyperlink x:Name="RegisterLink" Click="RegisterLink_Click">
                    <Run Text="Zarejestruj się"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Formularz rejestracji -->
        <StackPanel Grid.Row="1" x:Name="RegisterPanel" Visibility="Collapsed">
            <TextBlock Text="Nazwa użytkownika:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="RegisterUsernameTextBox" FontSize="14" Padding="8" Margin="0,0,0,15"
                     KeyDown="RegisterUsernameTextBox_KeyDown"/>
            
            <TextBlock Text="Hasło:" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="RegisterPasswordBox" FontSize="14" Padding="8" Margin="0,0,0,15"
                        KeyDown="RegisterPasswordBox_KeyDown"/>
            
            <TextBlock Text="Potwierdź hasło:" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" FontSize="14" Padding="8" Margin="0,0,0,20"
                        KeyDown="ConfirmPasswordBox_KeyDown"/>
            
            <Button x:Name="RegisterButton" Content="Zarejestruj się" 
                    Width="200" Height="40" FontSize="14" FontWeight="Bold"
                    Background="#2196F3" Foreground="White" BorderThickness="0"
                    Cursor="Hand" Click="RegisterButton_Click" Margin="0,0,0,10"/>
            
            <TextBlock HorizontalAlignment="Center" Foreground="Gray" FontSize="12">
                <Run Text="Masz już konto? "/>
                <Hyperlink x:Name="LoginLink" Click="LoginLink_Click">
                    <Run Text="Zaloguj się"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Komunikat o błędzie -->
        <TextBlock Grid.Row="2" x:Name="ErrorMessageTextBlock" 
                   Foreground="Red" FontSize="12" 
                   TextWrapping="Wrap" 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"
                   Visibility="Collapsed"/>
    </Grid>
</Window>
