<Window x:Class="HabitTracker.PredefinedHabitsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wybierz predefiniowane nawyki" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Wybierz nawyki, które chcesz dodać do swojego profilu:" 
                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"
                   TextWrapping="Wrap"/>

        <!-- Lista nawyków -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <ItemsControl x:Name="HabitsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                                Padding="12" Margin="0,0,0,10" Background="#F9F9F9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" 
                                          VerticalAlignment="Top" Margin="0,2,15,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" 
                                               Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                    <TextBlock FontSize="11" Foreground="#666" Visibility="{Binding ShowDetails}">
                                        <Run Text="Typ: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding TypeLabel}"/>
                                        <Run Text=" | "/>
                                        <Run Text="Cel: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding TargetLabel}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Przyciski wyboru -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Wybierz wszystkie" Width="140" Height="30" 
                    Click="SelectAllButton_Click"
                    Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0"/>
            <Button Content="Odznacz wszystkie" Width="140" Height="30" 
                    Click="DeselectAllButton_Click"
                    Background="#9E9E9E" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>

        <!-- Przyciski akcji -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Pomiń" Width="100" Height="35" 
                    Click="SkipButton_Click"
                    Background="#9E9E9E" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0"/>
            <Button Content="Dodaj wybrane" Width="120" Height="35" 
                    Click="AddSelectedButton_Click"
                    Background="#FF9800" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
