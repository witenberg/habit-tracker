<Window x:Class="HabitTracker.AddHabitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dodaj nowy nawyk" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Dodaj nowy nawyk" FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <!-- ScrollViewer dla zawartości formularza -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,15">
            <StackPanel>
                <!-- Typ nawyku -->
                <TextBlock Text="Typ nawyku:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="HabitTypeComboBox" 
                          SelectionChanged="HabitTypeComboBox_SelectionChanged"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Tak/Nie" Tag="Boolean" IsSelected="True"/>
                    <ComboBoxItem Content="Ilościowy" Tag="Quantitative"/>
                </ComboBox>

                <!-- Nazwa -->
                <TextBlock Text="Nazwa nawyku:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" Margin="0,0,0,15" Height="30"/>

                <!-- Opis -->
                <TextBlock Text="Opis (opcjonalny):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" 
                         TextWrapping="Wrap" AcceptsReturn="True" 
                         Height="60" Margin="0,0,0,15"/>

                <!-- Panel dla QuantitativeHabit (ukryty domyślnie) -->
                <StackPanel x:Name="QuantitativePanel" Visibility="Collapsed" Margin="0,0,0,15">
                    <TextBlock Text="Wartość docelowa:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TargetValueTextBox" Height="30" Margin="0,0,0,10"/>
                    <TextBlock Text="Jednostka:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="UnitTextBox" Height="30"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anuluj" Width="100" Height="35" 
                    Click="CancelButton_Click" 
                    Margin="0,0,10,0" Cursor="Hand"/>
            <Button Content="Zapisz" Width="100" Height="35" 
                    Click="SaveButton_Click"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
